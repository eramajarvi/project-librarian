---
import LandingLayout from "../layouts/LandingLayout.astro";
import { SignedIn, SignedOut, SignInButton } from "@clerk/astro/components";
---

<LandingLayout title="La Bibliotecaria">
	<main>
		<h1>Welcome to My Astro Site</h1>
		<p>This is a simple landing page built with Astro.</p>
		<p>Explore the features and enjoy your stay!</p>

		<SignedIn>
			<p>Click <a href="/[username]">here</a> to see my profile.</p>
		</SignedIn>

		<SignedOut>
			<p>Please sign in to access more features.</p>
			<SignInButton mode="modal">Sign In</SignInButton>
		</SignedOut>
	</main>
</LandingLayout>

<style is:global>
	@import "../styles/index.css";
</style>

<style>
	h1 {
		color: #ed1313;
		font-size: 2rem;
		margin-bottom: 1rem;
		font-family: "OCRAExtended";
	}
	p {
		color: #666;
		font-size: 1rem;
		line-height: 1.5;
		font-family: "OCRAExtended";
	}
</style>
